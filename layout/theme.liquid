<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{{ shop.main_page_title }}</title>

    <!-- Ombu Shop - Theme: Wooden - File: theme.liquid -->
    
    <link href='http://fonts.googleapis.com/css?family=Kaushan+Script|Graduate|Open+Sans+Condensed:700' rel='stylesheet' type='text/css' />

    {{ 'reset.css' | stylesheet_tag }}
    {{ 'basic.css' | stylesheet_tag }}
    {{ 'buttons.css' | stylesheet_tag }}
    {{ 'advice.css' | stylesheet_tag }}

    {{ 'shop.css' | asset_url | stylesheet_tag }}
    {{ 'products.css' | asset_url | stylesheet_tag }}

    {{ 'logo.css' | stylesheet_tag }}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" type="text/javascript"></script>
    {{ 'jquery.validate.min' | script_tag }}
    {{ 'rails' | script_tag }}
    {{ 'application' | script_tag }}

    <!-- CloudZoom: CSS and JS -->
    <script src='/javascripts/cloud-zoom/cloud-zoom.1.0.2.min.js' type='text/javascript'></script> 

    <!-- jQuery Masonry -->
    <script src='/themes/wooden/javascripts/jquery.masonry.min.js' type='text/javascript'></script> 
    <script src='/themes/wooden/javascripts/jquery.imagesloaded.min.js' type='text/javascript'></script> 

    {{ 'product' | script_tag }}

    {{ content_for_header }}

    <script type="text/javascript">
      jQuery(document).ready(function(){
        var $container = $('.product-listing');
        $container.imagesLoaded(function(){
          $container.masonry({
            isAnimated: false,
            isResizable: false,
            itemSelector: '.product'
          });
        });
      });
    </script>
    
    {% if product %}
    <!-- metatags para facebook -->
    <meta property="og:title" content="{{ shop.main_page_title }} - {{ product.name }}" />
    <meta property="og:type" content="product" />
    <meta property="og:url" content="{{ product.url }}" />
    <meta property="og:image" content="{{ product.featured_image | image_size: 'original' }}" />
    <meta property="og:site_name" content="{{ shop.main_page_title }}" />
    <meta property="fb:app_id" content="148526658594891" />
    <!-- fin metatags para facebook -->
    {% endif %}    
    
  </head>

  <body class="theme-wooden {% if template == 'show' %} one-col {% else %} two-col {% endif %}" {% if template == 'show' %} id="product-details" {% endif %}>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
    
    <div id="all">
      
      {% if current_user %}
        {% if current_user.is_admin? %}
        <div id="admin-bar" class="top-bar">
          <div id="login-bar">
            <span class="shop-name"><i class="icon-shopping-cart icon-white"></i> {{ current_user.shop.name }}</span> <span class="user-email"><i class="icon-user icon-white"></i> {{ current_user.email }}</span> <div class="btn-group"><a href="/admin" title="Ir al administrador" class="btn btn-inverse" target="_blank"><i class="icon-briefcase icon-white"></i> Admin</a> <a href="{{ current_path }}" title="Recargar la tienda" class="btn active btn-inverse"><i class="icon-shopping-cart icon-white"></i> Tienda</a></div>
            <a href="/logout" class="btn btn-inverse"><i class="icon-off icon-white"></i> Salir</a>
          </div>
        </div>
        {% else %}
          {% unless current_user.is_anonymous? %}
        <!-- if mayorista -->
        <div id="admin-bar" class="top-bar">
          <div id="login-bar">
            <span class="shop-name"><i class="icon-shopping-cart icon-white"></i> {{ current_user.shop.name }}</span> <span class="user-email"><i class="icon-user icon-white"></i> {{ current_user.email }} (mayorista)</span>
            <a href="/logout" class="btn btn-inverse"><i class="icon-off icon-white"></i> Salir</a>
          </div>
        </div>
          {% endunless %}
        {% endif %}
      {% endif %}

      {% include 'flash' %}

      <div id="page">
  
        <div id="header" class="container_bg container_10">

          {% include 'logo' %}

          <div id="cart_bar">
            <p class="cart-indicator">
              {% if current_order.item_count == 0 %}
                <a href="/cart" class="empty" title="Cart">Carrito: (Vac√≠o)</a>
              {% else %}
                <a href="/cart" class="full" title="Cart">Carrito: {{ current_order.item_count }}</a>
              {% endif %}
            </p>
          </div>     

          <!-- page navigation -->
          <ul id="navigation_bar"> 
            {% if shop.homepage %}
            <li><a href="/products">Productos</a></li>
            {% endif %}
            {% for page in pages %}
            <li {% if page.url contains current_path and current_path != "/" %}class="current-page"{% endif %}><a href="{{ page.url }}" title="{{ page.title }}">{{ page.title }}</a></li>
            {% endfor %}
          </ul>
          <!-- end page navigation -->
          
          
          <div class="clear">&nbsp;</div>
        </div><!-- end "header" -->
        
        <div id="destacados-container">
          <div id="destacados-content"><img src="http://s3.amazonaws.com/ombu_store_production/files/shops/381/wooden-banner.jpg" /></div>
        </div>

        <div id="wrapper" class="container container_10">

          {{ content_for_layout }}
          
          <div class="clear">&nbsp;</div>
          <div id="footer" class="grid_10">
            {{ content_for_footer }}
            <div class="store_footer">
              {{ shop.footer }}
            </div>
          </div> <!-- end "footer" -->
          <div class="clear">&nbsp;</div>
        </div> <!-- end "wrapper" -->
      </div> <!-- end "page" -->
    </div> <!-- end "all" -->
    <script type="text/javascript" src="//assets.pinterest.com/js/pinit.js"></script>
  </body>
</html>
